<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_category_public_form" model="ir.ui.view">
        <field name="name">product.category.public.form</field>
        <field name="model">product.category.public</field>
<!--
        <field name="groups_id"
               eval="[(4, ref('connector.group_connector_manager'))]"/>
-->
        <field name="arch" type="xml">
            <form string="Magento Product Category" groups="connector.group_connector_manager">
                <group>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="sequence"/>
                    <field name="parent_id"/>
                    <field name="child_ids"/>
                </group>
            </form>
        </field>
    </record>


    <record id="view_product_category_public_tree" model="ir.ui.view">
        <field name="name">product.category.public.tree</field>
        <field name="model">product.category.public</field>
        <field name="arch" type="xml">
            <tree string="Product Category Public">
                <field name="name"/>
                <field name="parent_id"/>
            </tree>
        </field>
    </record>
    <record id="view_magento_product_category_tree" model="ir.ui.view">
        <field name="name">magento.product.category.tree</field>
        <field name="model">magento.product.category</field>
        <field name="arch" type="xml">
            <tree string="Magento Product Category">
                <field name="name"/>
                <field name="parent_id"/>
                <field name="backend_id"/>
            </tree>
        </field>
    </record>

</odoo>
